<div class="container mt-4"></div>
<% vozaci.forEach(function(usr) { %>
<div class="card mt-4" id="card-<%= usr.id%>">
    <div class="card-body">
      <h5 class="card-title">Username: <%= usr.username%></h5>
      <p class="card-text">
        Email: <%=usr.Email%>
       </p>
      <p class="card-text">
        Password: <%=usr.Password%>
       </p>
      

       <div class="btn-group" role="group" aria-label="Actions">
       <form class="form-inline" action="/izmeni-vozaca/<%= usr.id %>" method="POST">
        <button class="btn btn-outline-success" type="submit">Измени корисника</button>
      </form>

     <!-- <form class="form-inline" action="/obrisi-vozaca/<%= usr.id %>" method="POST">
        <button class="btn btn-outline-success" type="submit">Обриши корисника</button>
      </form>
       </div>
      -->
    </div>
</div>
<% }) %>
</div>