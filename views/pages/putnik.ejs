<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head.ejs') %> 
        <link rel="stylesheet" href="css/aplikacija.css">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(133, 235, 235);">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Путник</a>
                    <div class="d-flex flex-grow-1">
                        <form class="d-flex me-auto">
                            <div class="form-group">
                           
                            <select class="form-control" id="exampleFormControlSelect1">
                              <option>Претрага по почетној дестинацији</option>
                              <option>Претрага по крајњој дестинацији</option>
                              <option>Претрага по возачу</option>
                            </select>
                            </div>
                        </form>

                        <form class="d-flex me-auto">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                        

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Измена профила</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logoutp">Одјава</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <br>
        <br>
        <div class="container mt-4">
          <% voznje.forEach(function(voznja) { %>
          <div class="card mt-4">
            <div class="card-body">
              <h5 class="card-title"><%= voznja.pocetna_destinacija %> - <%= voznja.krajnja_destinacija %></h5>
              <p class="card-text">Датум поласка: <%= new Date(voznja.Datum_i_vreme_polaska).toLocaleDateString() %></p>
              
              <p class="card-text">Mесто поласка: <%= voznja.mesto_polaska %></p>
              <p class="card-text">Број слободних места је: <%= voznja.Broj_mesta %></p>
              <p class="card-text">Цена по особи је: <%= voznja.Cena %> динара</p>
              <form class="form-inline">
                <button class="btn btn-outline-success" type="button">Пријави се за вожњу</button>
                <button class="btn btn-outline-success" type="button">Одјави се од вожње</button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
            

    </body>
</html>