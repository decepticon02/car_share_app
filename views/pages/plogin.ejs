          <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Регистрација</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form>

                      <form>
                        <div class="row">

                            <div class="col">
                              <input type="text" class="form-control" placeholder="Име">
                            </div>

                            <div class="col">
                              <input type="text" class="form-control" placeholder="Презиме">
                            </div>

                        </div>
                      </form>
                        <br>
                        <form>
                          <div class="row">
                            <input type="text" class="form-control" placeholder="Корисничко име">
                          </div>
                        </form>
                        <br>
                        <form>
                          <div class="row">
                            <input type="text" class="form-control" placeholder="Email адреса">
                          </div>
                        </form>

                        <br>
                        <form>
                          <div class="row">
                            <input type="text" class="form-control" placeholder="Број телефона">
                          </div>
                        </form>

                        <br>
                        <form>
                          <div class="row">
                            <input type="text" class="form-control" placeholder="Место пребивалишта">
                          </div>
                        </form>
                        <br>
                        <form>
                          <div class="row">
                              <div class="col">
                                <input type="text" class="form-control" placeholder="Лозинка">
                              </div>
                              <div class="col">
                                <input type="text" class="form-control" placeholder="Поновна лозинка">
                              </div>
  
                          </div>
                        </form>
                        <br>
                        <button type="submit" class="btn btn-primary">Региструј се</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
              </div>
          </div>
