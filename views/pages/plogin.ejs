    <body>
        <br>
        <h1>Login Путник</h1>
        <div class="center">
            <img src="images/logo_car.png"
            style="width: 400px">
            
            <div class="center">
                <form class="form_block" >
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email адреса</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Унесите email адресу" >
                     <br>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Лозинка</label>
                      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Унесите лозинку">
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">Пријава</button>
                    <br>
                    <br>
                    <button class="btn btn-primary" type="button" data-bs-target="#exampleModal2" data-bs-toggle="modal">Регистрација</button>
                  </form>
                

            </div>
        </div>



