generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Putnik {
  id            Int    @id @default(autoincrement())
  Email         String @unique
  Password      String
  ime           String
  prezime       String
  broj_telefona String
  prebivaliste  String
}

model usr {
  id          Int      @id @default(autoincrement())
  Email       String   @unique
  Password    String
  username    String
  admin_check Boolean  @default(false)
  voznje      Voznja[]
}

model Voznja {
  id                  Int      @id @default(autoincrement())
  usrId               Int
  vozac               usr      @relation(fields: [usrId], references: [id])
  pocetna_destinacija String
  krajnja_destinacija String
  mesto_polaska       String
  Broj_mesta          Int
  Vreme_polaska       DateTime
  Datum_polaska       DateTime
  Cena                Float
}
